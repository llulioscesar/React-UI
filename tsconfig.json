{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2021"
    ],
    "jsx": "react",
    "declaration": true,
    "outDir": "./",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "typeRoots": [
      "src/**/*",
      "src/custom.d.ts"
    ],
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "stories",
    "**/*.stories.tsx"
  ]
}